{
  "name": "otel-action",
  "version": "1.0.0",
  "description": "GitHub Action that exports complete workflow observability (metrics, traces, and detailed logs with accurate timestamps) to Google Cloud",
  "main": "index.js",
  "scripts": {
    "test": "node --test test/collector.test.js test/exporter.test.js",
    "build": "ncc build index.js -o dist && ncc build post.js -o dist/post"
  },
  "keywords": [
    "github-actions",
    "opentelemetry",
    "metrics",
    "google-cloud-monitoring"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/opentelemetry-cloud-monitoring-exporter": "^0.19.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^2.4.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-metrics": "^1.28.0",
    "@opentelemetry/sdk-trace-base": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "google-auth-library": "^9.15.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1"
  }
}
